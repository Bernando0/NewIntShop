@model ProductViewModel
@{
    ViewBag.Title = "Create";
}

<div class="container">
    <div class="row">
        <form asp-action="Create" enctype="multipart/form-data">
            <div class="border col-8">
                <div class="form-group">
                    <h2>@ViewBag.Title</h2>
                </div>
                <div class="form-group">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                 <div class="form-group">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                 <div class="form-group">
                    <div class="col-4">
                        <label asp-for="Image"></label>
                    </div>
                    <div class="col-8">
                        <input type="file" name="files" id="upload-image" class="form-control" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                </div>

                 <div class="form-group">
                    <div class="col-4">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <select type="file" asp-for="CategoryId" asp-items="@Model.CategoryDropDown" class="form-control" >

                            <option>--Select Category--</option>
                        </select>
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                </div>

                 <div class="form-group">
                    <div class="col-4">
                        <label asp-for="ApplicationTypeId"></label>
                    </div>
                    <div class="col-8">
                        <select type="file" asp-for="ApplicationTypeId" asp-items="@Model.AppTypeDropDown" class="form-control" >

                            <option>--Select Application Type--</option>
                        </select>
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col">
                        <input type="submit" value="Add" class="btn btn-success" />
                    </div>
                    <div class="col">
                        <a asp-action="Index" type="button" class="btn btn-dark">Go Back</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}